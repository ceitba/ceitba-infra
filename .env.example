NODE_ENV=production
TZ=America/Argentina/Buenos_Aires

DOMAIN=ceitba.com

# Let's Encrypt configuration
ACME_EMAIL=admin@ceitba.com
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

CEITBA_API_TAG=latest
CEITBA_SCHEDULER_TAG=latest

POSTGRES_DB=ceitba_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5433

API_PORT=3000
CEITBA_API_URL=https://ceitba.com

# JWT Secret for API authentication
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING

# ITBA API Integration
ITBA_API_TOKEN=your_itba_api_token_here
ITBA_API_BASE_URL=https://itbagw.itba.edu.ar/api/v1
ITBA_API_TIMEOUT=30000

APPSMITH_ENCRYPTION_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD
APPSMITH_ENCRYPTION_SALT=CHANGE_ME_TO_A_SECURE_SALT
APPSMITH_INSTANCE_NAME=CEITBA
APPSMITH_DISABLE_TELEMETRY=true
APPSMITH_SIGNUP_DISABLED=true

# Portainer Docker management interface
PORTAINER_ADMIN_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD