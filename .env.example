NODE_ENV=development

# SSL/Domain Configuration
# For local development: leave as 'localhost' (uses self-signed certificates)
# For production: set to your domain, e.g., 'ceitba.org.ar' (uses Let's Encrypt if available)
SSL_DOMAIN=localhost

# Server Name (nginx server_name directive)
# For local development: use 'localhost' to avoid redirects to production domain
# For production: use your actual domain 'ceitba.org.ar www.ceitba.org.ar'
SERVER_NAME=localhost

CEITBA_API_TAG=latest
CEITBA_SCHEDULER_TAG=latest
JWT_SECRET=your-jwt-secret
POSTGRES_DB=example_db
POSTGRES_PASSWORD=example_password
POSTGRES_HOST=postgres
POSTGRES_USER=postgres
DATABASE_PORT=

# Appsmith
APPSMITH_ENCRYPTION_PASSWORD=your_encryption_key
APPSMITH_ENCRYPTION_SALT=your_salt
APPSMITH_INSTANCE_NAME=CEITBA
APPSMITH_DISABLE_TELEMETRY=true
APPSMITH_SIGNUP_DISABLED=true

# Portainer
PORTAINER_ADMIN_PASSWORD=your_admin_password

# API
ITBA_API_TOKEN=
ITBA_API_BASE_URL=
ITBA_API_TIMEOUT=30000
API_PORT=3000

SPA_SCHEDULER_PORT=3001
