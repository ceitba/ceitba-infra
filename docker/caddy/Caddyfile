{
    email {$ACME_EMAIL:ceitba@ceitba.org.ar}
    acme_ca {$ACME_CA_SERVER:https://acme-v02.api.letsencrypt.org/directory}

    
    log {
        output file /var/log/caddy/access.log
        format json
        level INFO
    }
}

http://{$DOMAIN:localhost} {
    redir https://{host}{uri} permanent
}

# For production:
https://{$DOMAIN:localhost} {
    
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=(), usb=()"
        Content-Security-Policy "default-src 'self' http: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' http: https:; style-src 'self' 'unsafe-inline' http: https:; img-src 'self' data: http: https:; font-src 'self' data: http: https:; connect-src 'self' http: https: wss:; frame-ancestors 'self'; base-uri 'self'; form-action 'self'"
        
        # CORS headers - Dynamic from environment
        Access-Control-Allow-Origin "https://{$CORS_ORIGIN:localhost}"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-API-Version"
        Access-Control-Allow-Credentials "true"
        Access-Control-Max-Age "3600"
        
        -Server
        
        X-API-Version "1.0"
    }
    
    reverse_proxy envoy:8080 {
        health_uri /health
        health_interval 30s
        health_timeout 10s
        
        lb_policy round_robin
        
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Port {server_port}
    }
}

# Health check endpoint for Caddy itself
:8080 {
    respond /health "OK" 200
}
